{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Map showcasing deaths due to Air Pollution",
  "width": 800,
  "height": 400,
  "params": [
    {
      "name": "year_slider",
      "value": 1990,
      "bind": {
        "input": "select",
        "options": [1990, 2000, 2010, 2016],
        "labels": ["1990", "2000", "2010", "2016"],
        "name": "Year Selection: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "REPLACE_WITH_DATASET_URL",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.ADMIN",
          "from": {
            "data": {
              "url": "REPLACE_WITH_CORRESPONDING_CSV_URL"
            },
            "key": "Entity",
            "fields": ["Air pollution (total) (IHME, 2019)", "Entity", "Year"]
          }
        },
        {
          "filter": "year_slider == 1990 || +datum.Year === +year_slider"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "field": "Air pollution (total) (IHME, 2019)",
          "type": "quantitative",
          "scale": {
            "scheme": "reds"
          },
          "title": "Death Rate"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Air pollution (total) (IHME, 2019)",
            "type": "quantitative",
            "title": "Air Pollution"
          },
          {
            "field": "Year",
            "type": "nominal",
            "title": "Year"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "darkgray"
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  }
}
